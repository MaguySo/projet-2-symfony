{% extends 'base.html.twig' %}

{% block title %}Les catégories{% endblock %}

{% block mytitle %}Nos variétés anciennes d'arbres fruitiers{% endblock %}

{% block body %}

	<div class="row">
		{% for category in categories %}
			<div class="col-md-12">
				<h2 id="category" class=" bgGreen my-3 p-1 text-center text-white ">La production de nos
					<a href="{{path('categories_show',{'id':category.id})}}">
						<strong>{{ category.title }}</strong>
					</a>
				</h2>
				<div class=" category text-center">
					<a href="{{path('categories_show',{'id':category.id})}}">
						<img src="{{asset('images/' ~category.image)}}" alt="">
					</a>
				</div>
				<hr>
			</div>
		{% endfor %}
		{# /for category in categories #}
	</div>

{% endblock %}
