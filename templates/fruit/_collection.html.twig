{% block _fruit_images_widget %}
    <p>Ajouter vos images supplémentaires</p>
        {{ form_widget(form) }}
    
    
        <input type="hidden" id="widget-counter" value="0">



            <div class="form-group">
                <button type="button" id="add-image" class="btn btn-sm btn-blue">Ajouter</button>
            </div>
{% endblock %}


{% block _fruit_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{# Affichage entrées du sous-formulaire #}
{% block _fruit_images_entry_widget %}
    <div class="form-group" id="block_{{id}}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.url) }}
                        {{ form_errors(form.url) }}
                    </div>
                    <div class="col">
                        {{ form_widget(form.caption) }}
                        {{ form_errors(form.caption) }}
                    </div>
                </div>            
            </div>
            <div class="col-2">
                <button type="button" data-action="delete" data-target="#block_{{id}}" class="btn btn-danger">
                    <span class="fa fa-trash-o fa-lg"></span>
                </button>
            </div>
        </div>
    </div>
{% endblock %}
